//global variable
$txtUserID="";
$txtUserName="";
$txtPassword="";
$txtConfirmPassword="";
//for Message
$Message="";
if(isset($_GET["btnSave"]))
{
	//asign global variable values
	$txtUserID=$_GET["txtUserID"];
	$txtUserName=$_GET["txtUserName"];
	$txtPassword=$_GET["txtPassword"];
	$txtConfirmPassword=$_GET["txtConfirmPassword"];
	
	$conn=mysqli_connect("localhost","root","","lictbcadb");
	if (!$conn) 
	{
	  die("Connection failed: " . mysqli_connect_error());
	}
	else
	{
		$query="insert into tbuser(uid,username,password)values(Null,'$txtUserName','$txtPassword')";
		if(mysqli_query($conn,$query))
		{
			$Message= "Record inserted";
		}
		else
		{
			$Message="Record insertion fail";
		}
	}
	
	
}






















