<?php
//global variable
$userEmail="";
$userFirstName="";
$userLastName="";
$userPhoneNumber="";
$userPassword="";
//for Message
$Message="";
if(isset($_GET["SIGNUP"]))
{
 $userEmail=$_GET["userEmail"];
$userFirstName=$_GET["userFirstName"];
$userLastName=$_GET["userLastName"];
$userPhoneNumber=$_GET["userPhoneNumber"];
$userPassword=$_GET["userPassword"];

	//asign global variable values
	
	
	$conn=mysqli_connect("localhost","root","","Projectdb");
	if (!$conn) 
	{
	  die("Connection failed: " . mysqli_connect_error());
	}
	else
	{
		$query="insert into tbuser(UserID,Email,FirstName,LastName,PhoneNumber,Password)values(Null,'$userEmail','$userFirstName','$userLastName','$userPhoneNumber','$userPassword')";
		if(mysqli_query($conn,$query))
		{
			$Message= " Sucessfully Signed up";
		}
		else
		{
			$Message="SOrry!!!you were unable to sign up";
		}
	}
	
	
}

